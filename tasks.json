{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile & Run",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/.vscode/compile.py",
                "${file}",
                "&&",
                "python3",
                "${workspaceFolder}/.vscode/run.py",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/.vscode/run.py",
                "${file}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Compile for Debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-g3",
                "-Wall",
                "-Wextra"
            ]
        }
    ]
}